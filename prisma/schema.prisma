generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id  String  @id @default(uuid())
  login    String  @unique @db.VarChar(255)
  password String  @db.VarChar(255)
  deleted  Boolean @default(false)
  orders   Order[]
}

model Car {
  car_id       String  @id @default(uuid())
  registration String  @unique @db.VarChar(255)
  brand        String  @db.VarChar(255)
  model        String  @db.VarChar(255)
  color        String  @db.VarChar(255)
  observations String  @db.VarChar(255)
  orders       Order[]
  deleted Boolean @default(false)
  
}

model Order {
  order_id   String    @id @default(uuid())
  order_date DateTime  @db.Date
  order_time DateTime  @db.Time()
  item_list  String    @db.VarChar(255)
  total      Float     @db.Float
  deleted    Boolean   @default(false)
  car        Car       @relation(fields: [carId], references: [car_id])
  carId      String    @unique
  items      Item[]
  userId     String
  user       User      @relation(fields:[userId], references: [user_id])
}

model Item {
  item_id String    @id @default(uuid())
  name    String    @db.VarChar(255)
  value   Float     @db.Float
  orders  Order     @relation(fields: [orderId], references: [order_id])
  orderId String    @unique
}

